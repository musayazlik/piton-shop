{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "next/core-web-vitals",
    "next",
    "plugin:@next/next/recommended",
    "prettier",
    "eslint-config-prettier"
  ],
  "plugins": ["react", "prettier", "eslint-plugin-prettier"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "react/jsx-props-no-spreading": "off",
    "prettier/prettier": [
      "error",
      {
        "bracketSameLine": true,
        "endOfLine": "auto",
        "printWidth": 80,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "semi": false,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "useTabs": false,
        "tabWidth": 2
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
